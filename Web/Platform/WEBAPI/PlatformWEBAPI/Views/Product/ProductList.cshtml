                    </div>
                    @Html.Raw(zone_detail.Content)
                </div>
            </div>
        </div>
    </div>
    <div class="text-center">
        <a href="javascript:;" class="btn btn-outline-view-more" onclick="expand();">Xem thêm<i class="fas fa-chevron-down ml-2 "></i></a>
