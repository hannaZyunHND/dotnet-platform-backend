                    </div>
                    <div class="mr-3 mb-2">
                        <img asp-append-version="true" src="/images/icon-sm-td-4.svg" class="img-fluid mr-2" />@articleMinify.ArticleRecruitment.Address
                    </div>
                    <div class="mr-3  mb-2">
